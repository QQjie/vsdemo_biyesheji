<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="OA.Model" assembly="OA.Model">

  <class name="OA.Model.Grade ,OA.Model" table="grade">

    <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
    <id name="Gra_Id">
      <column name="Gra_Id" sql-type="int" not-null="true"/>
      <!--<generator class="uuid.hex" />-->
      <generator class="identity" />
    </id>
    <many-to-one name="Student" column="Stu_Id"></many-to-one>
    <many-to-one name="Theme" column="Theme_Id"></many-to-one>
     <many-to-one name="Teacher" column="Tea_Id"></many-to-one>
    <!--<one-to-one name="Student" class="Student"></one-to-one>
    <one-to-one name="Theme" class="Theme"/>
    <one-to-one name="Teacher" class="Teacher"></one-to-one>-->
    
    
    <!-- A cat has to have a name, but it shouldn' be too long. -->
    <property name="Score" type="int">
      <column name="Score" length="3" not-null="true" />
    </property>
    <property name="SubTime" type="DateTime">
      <column name="SubTime"  not-null="true" />
    </property>
    <property name="Content" type="string">
      <column name="Content"  not-null="true" />
    </property>
    
    <!--<property name="Stu_Class" type="int">
      <column name="Stu_Class" length="18" not-null="true" />
    </property>-->


    <!--如果列名与属性名一致就不用配置了-->
    <!--<property name="Sex" />
    <property name="Weight" />-->
  </class>

</hibernate-mapping>



