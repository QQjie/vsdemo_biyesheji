<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="OA.Model" assembly="OA.Model">

  <class name="OA.Model.Admin ,OA.Model" table="admin">

    <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
    <id name="Ad_Id">
      <column name="Ad_Id" sql-type="int" not-null="true"/>
      <!--<generator class="uuid.hex" />-->
      <generator class="identity" />
    </id>

    <!-- A cat has to have a name, but it shouldn' be too long. -->
    <property name="Ad_Num" type="string">
      <column name="Ad_Num" length="20" not-null="true" />
    </property>
    <property name="Ad_Name" type="string">
      <column name="Ad_Name" length="20" not-null="true" />
    </property>
    <property name="Ad_Pwd" type="string">
      <column name="Ad_Pwd" length="20" not-null="true" />
    </property>
    <!--<bag name="AdminFiles" cascade="all-delete-orphan" inverse="false">  adminfilede 数据全部删除-->
    <bag name="AdminFiles" cascade="all" generic="true"  inverse="true" >
      <key column="Ad_Id"></key>
      <one-to-many class="AdminFile"/>
    </bag>

    <!--<property name="Stu_Class" type="int">
      <column name="Stu_Class" length="18" not-null="true" />
    </property>-->


    <!--如果列名与属性名一致就不用配置了-->
    <!--<property name="Sex" />
    <property name="Weight" />-->
  </class>

</hibernate-mapping>



