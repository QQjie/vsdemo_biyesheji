<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="OA.Model" assembly="OA.Model">

  <class name="OA.Model.Department,OA.Model" table="department">

    <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
    <id name="Dep_Id">
      <column name="Dep_Id" sql-type="int" not-null="true"/>
      <!--<generator class="uuid.hex" />-->
      <generator class="identity" />
    </id>

    <!-- A cat has to have a name, but it shouldn' be too long. -->
       
    <property name="Dep_Name" type="string">
      <column name="Dep_Name" length="40" not-null="true" />
    </property>

    <bag name="Professions" cascade="all"  generic="true" inverse="true">
      <key column="Dep_Id"></key>
      <one-to-many class="Profession"/>
    </bag>
    <bag name="Themes" cascade="all" inverse="true" generic="true" >
      <key column="Dep_Id"></key>
      <one-to-many class="Theme"/>
    </bag>
    <bag name="Students" cascade="all"  generic="true" inverse="true">
      <key column="Dep_Id"></key>
      <one-to-many class="Student"/>
    </bag>
    <!--如果列名与属性名一致就不用配置了-->
    <!--<property name="Sex" />
    <property name="Weight" />-->
  </class>

</hibernate-mapping>



