<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="OA.Model" assembly="OA.Model">

  <class name="OA.Model.Profession ,OA.Model" table="profession">

    <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
    <id name="Pro_Id">
      <column name="Pro_Id" sql-type="int" not-null="true"/>
      <!--<generator class="uuid.hex" />-->
      <generator class="identity" />
    </id>

    <!-- A cat has to have a name, but it shouldn' be too long. -->
    
    <property name="Pro_Name" type="string">
      <column name="Pro_Name" length="40" not-null="true" />
    </property>
    <property name="Pro_SYear" type="int">
      <column name="Pro_SYear" length="4" not-null="true" />
    </property>
   
    <many-to-one name="Department" column="Dep_Id"></many-to-one>

    <bag name="Classes" cascade="all" inverse="false"  >
      <key column="Pro_Id"></key>
      <one-to-many class="Class"/>
    </bag>
    <bag name="Themes" cascade="all" inverse="false" lazy="true" >
      <key column="Pro_Id"></key>
      <one-to-many class="Theme"/>
    </bag>
    <bag name="Students" cascade="all" inverse="false" >
      <key column="Pro_Id"></key>
      <one-to-many class="Student"/>
    </bag>
    <!--如果列名与属性名一致就不用配置了-->
    <!--<property name="Sex" />
    <property name="Weight" />-->
  </class>

</hibernate-mapping>


