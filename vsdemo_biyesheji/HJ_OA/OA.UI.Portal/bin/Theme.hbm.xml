<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="OA.Model" assembly="OA.Model">

  <class name="OA.Model.Theme ,OA.Model" table="theme">

    <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
    <id name="Theme_Id">
      <column name="Theme_Id" sql-type="int" not-null="true"/>
      <!--<generator class="uuid.hex" />-->
      <generator class="identity" />
    </id>
    <property name="Theme_Name" type="string">
      <column name="Theme_Name" length="50" not-null="true" />
    </property>
    <many-to-one name="Department" column="Dep_Id" ></many-to-one>
    <many-to-one name="Profession" column="Pro_Id" />
    <many-to-one name="Teacher" column="Tea_Id"  ></many-to-one>
    <many-to-one name="TeaGroup" column="TG_Id" not-null="false"  ></many-to-one>
    <!--<one-to-one class="ChoseTheme" name="ChoseTheme" constrained="true"></one-to-one>-->

    <!-- A cat has to have a name, but it shouldn' be too long. -->
    <!--<property name="CountStu" type="int">
      <column name="CountStu" length="3" not-null="true" />
    </property>-->
    <property name="Introduce" type="string">
      <column name="Introduce" length="512" not-null="false" />
    </property>
    <property name="SubTime" type="DateTime">
      <column name="SubTime"  not-null="true" />
    </property>
    <property name="Examine" type="int">
      <column name="Examine"  length="1" not-null="false" />
    </property>
    <property name="ExamineTime" type="DateTime">
      <column name="ExamineTime" not-null="false" />
    </property>
    <!--<property name="ExamineStatus" type="int">
      <column name="ExamineStatus" length="1" not-null="false" />
    </property>-->

    <!--<property name="Stu_Class" type="int">
      <column name="Stu_Class" length="18" not-null="true" />
    </property>-->


    <!--如果列名与属性名一致就不用配置了-->
    <!--<property name="Sex" />
    <property name="Weight" />-->
  </class>

</hibernate-mapping>




