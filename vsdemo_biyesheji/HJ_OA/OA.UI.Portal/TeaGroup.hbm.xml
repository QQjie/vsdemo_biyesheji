<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="OA.Model" assembly="OA.Model">

  <class name="OA.Model.TeaGroup,OA.Model" table="teagroup">

    <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
    <id name="TG_Id">
      <column name="TG_Id" sql-type="int" not-null="true"/>
      <!--<generator class="uuid.hex" />-->
      <generator class="identity" />
    </id>

    <!-- A cat has to have a name, but it shouldn' be too long. -->
  
    <property name="TG_Name" type="string">
      <column name="TG_Name" length="20" not-null="true" />
    </property>
    
    <many-to-one name="Department" column="Dep_Id" ></many-to-one>

    <bag name="Teachers"  cascade="save-update" inverse="false"  >
      <key column="TG_Id"></key>
      <one-to-many class="Teacher"/></bag>
    <bag name="Themes"  cascade="save-update" inverse="true" generic="true" >
      <key column="TG_Id"></key>
      <one-to-many class="Theme"/>
    </bag>

    <!--<property name="Stu_Class" type="int">
      <column name="Stu_Class" length="18" not-null="true" />
    </property>-->


    <!--如果列名与属性名一致就不用配置了-->
    <!--<property name="Sex" />
    <property name="Weight" />-->
  </class>

</hibernate-mapping>



