<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="OA.Model" assembly="OA.UI.Portal">

  <class name="OA.Model.OrderInfo , OA.Model" table="OrderInfo">

    <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
    <id name="OrderId">
      <column name="OrderId" sql-type="int" not-null="true"/>
      <!--<generator class="uuid.hex" />-->
      <generator class="identity" />
    </id>

    <!-- A cat has to have a name, but it shouldn' be too long. -->
    <property name="Content">
      <column name="Content" length="1024" not-null="false" />
    </property>
    <property name="UserInfoId">
      <column name="UserInfoId" length="4" not-null="false" />
    </property>

    <!--如果列名与属性名一致就不用配置了-->
    <!--<property name="Sex" />
    <property name="Weight" />-->
  </class>

</hibernate-mapping>
