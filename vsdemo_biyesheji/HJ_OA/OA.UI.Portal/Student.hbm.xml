<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="OA.Model" assembly="OA.Model">

  <class name="OA.Model.Student ,OA.Model" table="student">

    <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
    <id name="Stu_Id">
      <column name="Stu_Id" sql-type="int" not-null="true"/>
      <!--<generator class="uuid.hex" />-->
      <generator class="identity" />
    </id>

    <!-- A cat has to have a name, but it shouldn' be too long. -->
    <property name="Stu_Num" type="string">
      <column name="Stu_Num" length="20" not-null="true" />
    </property>
    <property name="Stu_Name" type="string">
      <column name="Stu_Name" length="20" not-null="true" />
    </property>
    <property name="Stu_Pwd" type="string">
      <column name="Stu_Pwd" length="20" not-null="true" />
    </property>
    <property name="Stu_Sex" type="string">
      <column name="Stu_Sex" length="2" not-null="true" />
    </property>
    <!--<one-to-one name="Profession" class="Profession"></one-to-one>
    <one-to-one name="Department" class="Department"></one-to-one>
    <one-to-one name="Class" class="Class"></one-to-one>-->
    <many-to-one name="Profession" column="Pro_Id" ></many-to-one>
    <many-to-one name="Department" column="Dep_Id" ></many-to-one>
    <many-to-one name="Class" column="C_Id" ></many-to-one>
    <!--<one-to-one name="ChoseTheme"  class="ChoseTheme" ></one-to-one>-->
    <bag name="StuFiles" cascade="all" inverse="false" >
      <key column="Stu_Id"></key>
      <one-to-many class="StuFile"  />
    </bag>
    
    <!--<property name="Stu_Class" type="int">
      <column name="Stu_Class" length="18" not-null="true" />
    </property>-->
    <property name="Stu_Tel" type="string">
      <column name="Stu_Tel" length="20" not-null="false" />
    </property>
    <property name="Stu_Email" type="string">
      <column name="Stu_Email" length="20" not-null="false" />
    </property>
    <property name="Stu_Photo" type="string">
      <column name="Stu_Photo" length="40" not-null="false" />
    </property>

    <!--如果列名与属性名一致就不用配置了-->
    <!--<property name="Sex" />
    <property name="Weight" />-->
  </class>

</hibernate-mapping>

