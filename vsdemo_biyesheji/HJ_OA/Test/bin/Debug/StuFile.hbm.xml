<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="OA.Model" assembly="OA.Model">

  <class name="OA.Model.StuFile ,OA.Model" table="stufile">

    <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
    <id name="StuF_Id">
      <column name="StuF_Id" sql-type="int" not-null="true"/>
      <!--<generator class="uuid.hex" />-->
      <generator class="identity" />
    </id>

    <!-- A cat has to have a name, but it shouldn' be too long. -->
    <property name="StuF_Name" type="string">
      <column name="StuF_Name" length="520" not-null="true" />
    </property>     
    <property name="StuF_Intro" type="string">
      <column name="StuF_Intro" length="520" not-null="false" />
    </property>
    <property name="Url" type="string">
      <column name="Url" length="520" not-null="true" />
    </property>
    <many-to-one name="Student" column="Stu_Id"></many-to-one>

    <!--<property name="Stu_Class" type="int">
      <column name="Stu_Class" length="18" not-null="true" />
    </property>-->


    <!--如果列名与属性名一致就不用配置了-->
    <!--<property name="Sex" />
    <property name="Weight" />-->
  </class>

</hibernate-mapping>




