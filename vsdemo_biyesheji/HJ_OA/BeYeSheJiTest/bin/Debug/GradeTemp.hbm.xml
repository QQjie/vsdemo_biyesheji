<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="OA.Model" assembly="OA.Model">

  <class name="OA.Model.GradeTemp ,OA.Model" table="gradetemp">

    <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
    <id name="GraTemp_Id">
      <column name="GraTemp_Id" sql-type="int" not-null="true"/>
      <!--<generator class="uuid.hex" />-->
      <generator class="identity" />
    </id>
    
    <one-to-one name="Theme" class="Theme"></one-to-one>
    <one-to-one name="Teacher" class="Teacher"/>
 


    <!-- A cat has to have a name, but it shouldn' be too long. -->
    <property name="ScoreTemp" type="int">
      <column name="ScoreTemp" length="3" not-null="true" />
    </property>
   
  </class>

</hibernate-mapping>





